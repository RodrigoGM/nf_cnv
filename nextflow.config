// Automatic cleanup configuration
cleanup = true

// Enable file staging optimization
process {
    scratch = true
    stageInMode = 'symlink'
    stageOutMode = 'rsync'
}


// manifest
manifest {
    name            = 'nf-cnv'
    author          = 'Rodrigo Gularte MÃ©rida'
    homePage        = 'https://github.com/RodrigoGM/nf-cnv'
    description     = 'Nextflow pipeline for single-cell copy number variation analysis'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=22.10.0'
    version         = '1.0.0'
}
